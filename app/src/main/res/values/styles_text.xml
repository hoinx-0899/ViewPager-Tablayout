<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextNormal">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextNormal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall" parent="TextNormal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextSmall.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLarge" parent="TextNormal">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextLarge.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXLarge" parent="TextNormal">
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="TextXLarge.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXXLarge" parent="TextNormal">
        <item name="android:textSize">@dimen/text_xxlarge</item>
    </style>

    <style name="TextXXLarge.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXXXLarge" parent="TextNormal">
        <item name="android:textSize">@dimen/text_xxxlarge</item>
    </style>

    <style name="TextXXXLarge.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>